<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    	xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/managementTomMilekHeading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/managementTomMilek"
            android:textColor="@color/headings"
            android:textSize="@dimen/large_heading" />

        <ImageView
            android:id="@+id/managementTomMilekBannerImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/maxheightbanner"
            android:src="@drawable/tom_milek_banner" />

    
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >
	        
	       <TableLayout 
	    	android:layout_width="match_parent"
	    	android:layout_height="match_parent" >
	    	
	           <TableRow
	               android:id="@+id/tableRow0"
	               android:layout_width="wrap_content"
	               android:layout_height="match_parent"
	               android:layout_marginLeft="@dimen/buttonpadding" >
	            
		 		<Button
		 		    android:id="@+id/managementTomMilekButton2"
		 		    android:layout_width="fill_parent"
		 		    android:layout_height="wrap_content"
		 		    android:layout_weight="0"
		 		    android:background="@drawable/soundcloud_selector"
		 		    android:text="" />
		        
		        <Button
		            android:id="@+id/managementTomMilekButton3"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="@dimen/buttonpadding"
		            android:layout_weight="0"
		            android:background="@drawable/youtube_selector"
		            android:text="" />
		        
		        <Button
		            android:id="@+id/managementTomMilekButton4"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="@dimen/buttonpadding"
		            android:layout_weight="0"
		            android:background="@drawable/facebook_selector"
		            android:text="" />
		        
	        	</TableRow>
	        	
	        </TableLayout>
	        
	        <TextView
	            android:id="@+id/managementTomMilekInformation"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/textpadding"
	            android:layout_marginRight="@dimen/textpadding"
	            android:layout_marginTop="@dimen/textpadding"
	            android:gravity="center"
	            android:text="@string/managementTomMilekInformationBiographyBlurb1" />
	        
	    </LinearLayout>
	    
    </ScrollView>
    
</LinearLayout>