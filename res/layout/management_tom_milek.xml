<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/managementTomMilekHeading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/managementTomMilek"
            android:textColor="@color/orange"
            android:textSize="@dimen/large_heading" />

        <ImageView
            android:id="@+id/managementTomMilekBannerImageView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:maxHeight="@dimen/maxheightbanner"
            android:src="@drawable/tom_milek_banner" />

        <Button
            android:id="@+id/managementTomMilekButton1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Information" />
        
        <Button
            android:id="@+id/managementTomMilekButton2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Listen" />
        
        <Button
            android:id="@+id/managementTomMilekButton3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Watch" />
        
        <Button
            android:id="@+id/managementTomMilekButton4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Social" />
        
    </LinearLayout>
</ScrollView>